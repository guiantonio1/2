programa
{
	
	funcao inicio()
	{
		inteiro tabua = 3 
        inteiro tabua1 = 4 
        inteiro tabua2 = 5 
        inteiro centimetros
        inteiro centimetros2
        inteiro centimetros3
        inteiro sobra
        inteiro sobra2
        inteiro sobra3

        centimetros = (tabua * 100) / 45
        centimetros2 = (tabua1 * 100) / 45
        centimetros3 = (tabua2 * 100) / 45
        sobra =  (tabua * 100) % 45
        sobra2 =  (tabua1 * 100) % 45
        sobra3 =  (tabua2 * 100) % 45

        escreva("Com uma madeira de ", tabua , " metros,é possivel cortar uma quantidade de ", centimetros ," pedaços com 45 centimos e sobrara uma quantidade de ", sobra," centimetros\n")
        escreva("Com uma madeira de ", tabua1 , " metros,é possivel cortar uma quantidade de ", centimetros2 ," pedaços com 45 centimos e sobrara uma quantidade de ", sobra2," centimetros\n")
        escreva("Com uma madeira de ", tabua2 , " metros,é possivel cortar uma quantidade de ", centimetros3 ," pedaços com 45 centimos e sobrara uma quantidade de ", sobra3 ," centimetros\n")
	}
}
