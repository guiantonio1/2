programa
{
	inclua biblioteca Matematica
--> m
	
	funcao inicio()
	{
	   real l1 = 11.5
        real l2 = 6.3
        real pitagoras
        inteiro raiz1

        pitagoras = (l1 * l1) + (l2 * l2)
        raiz1 = m.raiz(pitagoras , 2)

        escreva("Precisara ser comprada uma quantidade de ", raiz1 ," ou ", pitagoras ," metros de fio!")//a
     
	}
}



 programa
{
	inclua biblioteca Matematica
--> m
	
	funcao inicio()
	{
        real l1 
        real l2 
        real pitagoras
          inteiro raiz1

          escreva("Digite uma largura de uma casa: ")
          leia(l1)

          escreva("Digite a outra largura da casa:")
          leia(l2)


        pitagoras = (l1 * l1) + (l2 * l2)
        raiz1 = m.raiz(pitagoras , 2)

        escreva("Precisara ser comprada uma quantidade de ", raiz1 ," ou ", pitagoras ," metros de fio!")//B
        
     
	}
}
